<script>
     function approve(id, status) {
        console.log(id,status)
        if (status == 'pending') {
            swal("Are you sure you want approve this?", {
                buttons: ["Cancel", "Yes"],
            }).then((approval) => {
                if (approval) {
                    refundApprove(id)
                } else {
                    swal("Request approval has aborted");
                }
            })
        } else if (status == 'approved') {
            swal("You already approved");
        }else if (status == 'rejected') {
            swal("rejected request can not approve");
        }

    }

    function refundApprove(id) {
        $.ajax({
            url: '/admin/refund-approved/' + id,
            type: 'get',
            success: (response) => {
                if (response) {
                    location.reload()
                }
            }
        })
    }

    function rejectConfirm(id, status) {
        if (status == 'pending') {
            swal("Are you sure you want reject this?", {
                buttons: ["Cancel", "Yes"],
            }).then((approval) => {
                if (approval) {
                    refundReject(id)
                } else {
                    swal("Request rejection has aborted");
                }
            })
        } else if (status == 'rejected') {
            swal("You already rejected");
        }else if (status == 'approved') {
            swal("approved request can not reject");
        }
    }
    function refundReject(id){
          $.ajax({
            url:'/admin/reject-refund/'+id,
            type: 'get',
            success:(response)=>{
                if(response){
                    location.reload()
                }
            }
        })
    }
</script>