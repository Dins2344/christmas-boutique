<script>
    function incrementValue (id) {
  const inputField = document.getElementById(id)
  let value = parseInt(inputField.value, 10)
  value = isNaN(value) ? 1 : value
  console.log(value)
  value++
  inputField.value = value.toString()
}

function decrementValue (id) {
  const inputField = document.getElementById(id)
  let value = parseInt(inputField.value, 10)
  value = isNaN(value) ? 1 : value
  value < 2 ? value = 1 : value--
  inputField.value = value.toString()
}
    const quickView = (id) => {
        console.log(id)
        $.ajax({
            url: '/quickView/' + id,
            type: 'get',
            success: (response) => {
                if (response.status) {
                    location.reload()
                }
            }

        })
    }

</script>
